.modal-container
    display: none // override to show
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100%
    
    z-index: 1000
    background: rgba(black, 70%)
    
.modal
    display: block
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)
    
    background: #eee