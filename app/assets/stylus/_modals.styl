.modal-container
    display: none // override to show
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100%
    
    z-index: 1000
    background: rgba(black, 70%)
    
    overflow: auto

.modal
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%

    display: flex
    justify-content: center
    align-items: center

.modal-window
    display: block
    position: absolute
    box-sizing: border-box
    
    min-width: 500px
    
    margin: 20px
    padding: 0
    
    background: #eee
    
.modal-splitter
    display: block
    margin: 0
    padding: 0
    
    border: none
    border-bottom: 2px solid gray
    
.modal-contents
    padding: 20px 20px
    
.modal-head
    padding: 20px 20px
    
.modal-title
    padding: 0
    margin: 0
    
    color: rgba(black, 50%)
    font-family: "Roboto", sans-serif
    font-size: 20px
    text-transform: uppercase
    letter-spacing: 1.3px
    
.modal-foot
    padding: 10px 20px
    
    text-align: right